@require './variables';

/**
* Nav
**/

nav {
  background-color: #000;
  opacity: 1;
  text-align: center;
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  z-index: 100;
  max-height: 75px;
  max-width: 100%;
  overflow: auto;
}

nav ul {
  display: inline-block;
  white-space: nowrap;
  margin: 0;
}

nav li {
  display: inline-block;
  padding: 25px 20px;
  vertical-align: top;
}

nav li.brand {
  padding: 17px 20px 0;
  width: 250px;
}

nav a {
  color: #A8A8A8;
  text-decoration: none;
  font-family: 'arno-pro', serif;
  letter-spacing: 1px;
}

nav li.active a {
  color: $brown;
}

nav a:hover {
  color: #ca8a17;
}
