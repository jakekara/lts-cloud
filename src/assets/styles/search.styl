/**
* Search
**/

.search-container {
  padding-top: 150px;
  text-align: center;
}

.search-container .input-container {
  width: 400px;
  position: relative;
  margin: 0 auto;
}

.search-container input {
  padding: 9px 14px 9px 40px;
  font-size: 1.1em;
  border: none;
  border-radius: 3px;
  width: 100%;
  margin: 0 auto;
  box-sizing: border-box;
}

.search-container select {
  position: absolute;
  right: 0px;
  top: 0px;
  background: url(../images/down-caret-gray.png);
  background-repeat: no-repeat;
  background-size: 11%;
  background-position-x: 93%;
  background-position-y: 55%;
  height: 100%;
  width: 100px;
  overflow: hidden;
  -webkit-border-radius: 8px;
  -moz-border-radius: 8px;
  border-radius: 3px;
  background-color: #FFFFFF;
  display: inline-block;
  border: 1px solid #ebebeb;
  padding: 10px;
  box-sizing: border-box;
  font-size: .9em;
}

.search-container .glass {
  height: 17px;
  width: 17px;
  position: absolute;
  top: 11px;
  left: 12px;
  background: url('../images/magnifying-glass.png');
  background-size: cover;
}