/**
* Testimony
**/

.testimony-modal-container {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 100;
  background: rgba(0,0,0,0.7); 
}

.testimony-inner {
  margin: 30px;
}

.testimony {
  margin: 50px auto;
  color: #000;
  background: #fff;
  max-width: 1000px;
  max-height: 100%;
}

.testimony .content {
  position: relative;
}

.testimony .right {
  width: 360px;
  float: right;
}

.testimony .left {
  overflow-x: hidden;
  padding: 30px 20px 15px;
}

/**
* Left
**/

.testimony .title {
  font-weight: 700;
  font-size: 17px;
  padding-bottom: 20px;
}

.testimony .body {
  font-family: courier;
  font-size: 14px;
  line-height: 1.25em;
  max-height: 70vh;
  overflow: auto;
  padding-right: 25px;
  padding-left: 20px;
  margin-right: 15px;
}

.footer {
  padding-bottom: 20px;
  padding-left: 20px;
  font-size: 13px;
}

.footer div:first-of-type {
  margin-bottom: 7px;
}

/**
* Right
**/

.testimony .right-content {
  padding: 20px;
}

.testimony .tab {
  font-weight: 700;
  font-size: 17px;
  width: 50%;
  display: inline-block;
  padding: 13px 10px;
  border: 1px solid lightgray;
  border-right: none;
  text-align: center;
  cursor: pointer;
}

.testimony .audio-container {
  background: #f9f9f9;
}

.testimony .media-caption {
  line-height: 1.25em;
  font-size: 14px;
  margin-top: 15px;
}

@media(max-width: 900px) {
  .testimony .right {
    float: none;
    width: 100%;
  }

  .testimony video {
    margin: 5px auto 0;
    display: block;
  }

  .testimony .left {
    padding-top: 0;
  }

  .testimony .body {
    margin-right: 0;
  }

  .testimony .audio-container {
    padding-top: 20px;
  }

  .testimony .audio-container img,
  .testimony .audio-container audio {
    margin: 0 auto;
    display: block;
  }
}

@media (max-height: 700px) {
  .testimony .body {
    max-height: 55vh;
  }
}

@media (max-width: 900px) and (max-height: 900px) {
  .testimony .body {
    max-height: 30vh;
  }
}