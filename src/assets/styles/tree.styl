/**
* Tree
**/

.tree .left {
  width: 320px;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  background-image: url('../images/memorial-sepia.jpg');
  padding: 10px;
  box-sizing: border-box;
}

.tree .left .text {
  padding-top: 300px;
  padding-top: 30vh;
  color: #ddd;  
}

.tree .right {
  width: 100%;
  padding-left: 320px;
  box-sizing: border-box;
  position: absolute;
  top: 80px;
  right: 0;
  bottom: 0;
  overflow: auto;
}